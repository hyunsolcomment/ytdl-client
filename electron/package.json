{
    "name": "name",
    "version": "1.0.0",
    "author": "author",
    "description": "description",
    "devDependencies": {
        "@types/fluent-ffmpeg": "^2.1.24",
        "electron": "^30.0.8",
        "electron-builder": "^24.13.3",
        "nodemon": "^3.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "wait-on": "^7.2.0"
    },
    "main": "final/main.js",
    "scripts": {
        "start": "npm run watch",
        "watch": "nodemon -e ts --watch ./src --exec npm run electron:start",
        "electron:start": "wait-on http://localhost:3000 && cls && tsc && electron ./public/main.js",
        "electron:build-window": "electron-builder -w",
        "electron:build-mac": "electron-builder -m"
    },
    "build": {
        "appId": "me.electron.app",
        "productName": "name",
        "directories": {
            "output": "../dist"
        },
        "compression": "maximum",
        "files": [
            "final/**/*"
        ],
        "asar": true,
        "win": {
            "target": "portable",
            "icon": "public/icon.ico"
        },
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg",
                "zip"
            ]
        }
    },
    "dependencies": {
        "ffmpeg-static": "^5.2.0",
        "fluent-ffmpeg": "^2.1.3",
        "ytdl-core": "^4.11.5"
    }
}
